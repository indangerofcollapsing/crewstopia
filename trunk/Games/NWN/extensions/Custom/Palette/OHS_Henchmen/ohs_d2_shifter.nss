// Could take level 1 in Shifter
int StartingConditional()
{
  if (GetLevelByClass(CLASS_TYPE_SHIFTER)>0) return FALSE;
  else if (!GetHasFeat(FEAT_WILD_SHAPE)) return FALSE;
  else if (GetLevelByClass(CLASS_TYPE_BARD)>=7) return TRUE;
  else if (GetLevelByClass(CLASS_TYPE_SORCERER)>=6) return TRUE;
  else if (GetLevelByClass(CLASS_TYPE_WIZARD)>=5) return TRUE;
  else if (GetLevelByClass(CLASS_TYPE_CLERIC)>=5) return TRUE;
  else if (GetLevelByClass(CLASS_TYPE_DRUID)>=5) return TRUE;
  else if (GetLevelByClass(CLASS_TYPE_PALADIN)>=12) return TRUE;
  else if (GetLevelByClass(CLASS_TYPE_RANGER)>=12) return TRUE;
  else return FALSE;
}

