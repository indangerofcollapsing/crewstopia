// Could take level 1 in Dwarven Defender
int StartingConditional()
{
  if (GetLevelByClass(CLASS_TYPE_DWARVEN_DEFENDER)>0) return FALSE;
  else if (GetRacialType(OBJECT_SELF)!=RACIAL_TYPE_DWARF) return FALSE;
  else if (GetBaseAttackBonus(OBJECT_SELF)<7) return FALSE;
  else if (GetAlignmentLawChaos(OBJECT_SELF)!=ALIGNMENT_LAWFUL) return FALSE;
  else if (!GetHasFeat(FEAT_DODGE)) return FALSE;
  else if (!GetHasFeat(FEAT_TOUGHNESS)) return FALSE;
  else return TRUE;
}

